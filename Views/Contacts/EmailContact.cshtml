@{
}



<div class="card">
    <form asp-action="EmailContact" asp-controller="Contacts" method="post">
    <div class="card-header">
       <h3 class="heroTitle fs-4 mt-2">Email Contact: @Model.Contact!.FullName</h3>
    </div>
    <div class="card-body">
    
        <div class="row row-cols-1">
            <div class="col">
                    <label asp-for="@Model.EmailData!.EmailAddress">To:</label>
                    <textarea type="email" rows="3" readonly class="form-control" asp-for="@Model.EmailData!.EmailAddress"></textarea>
            </div>
                <div class="col">
                    <label asp-for="@Model.EmailData!.EmailSubject" class="form-label">Subject:</label>
                    <input type="text" class="form-control" asp-for="@Model.EmailData!.EmailSubject" />
                </div>
                <div class="col">
                    <label asp-for="@Model.EmailData!.EmailBody">Message:</label>
                    <textarea type="text" class="form-control" asp-for="@Model.EmailData!.EmailBody" rows="5"></textarea>
                </div>

         </div>

     </div>
     <div class="card-footer d-flex justify-content-between p-3">
         <a asp-action="Index" asp-controller="Contacts" class="btn btn-outline-secondary rounded-pill btnLink">Back</a>
         <button type="submit" class="btn btn-primary rounded-pill btnLink">Send</button>

     </div>
    </form>
</div>